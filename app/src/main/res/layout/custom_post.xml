<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:windowSoftInputMode="adjustPan"
    android:background="@drawable/back"
    android:paddingLeft="24dp">

    <TextView
        android:id="@+id/postName_txt"
        android:layout_width="201dp"
        android:layout_height="25dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />

    <TextView
        android:id="@+id/postText_txt"
        android:layout_width="314dp"
        android:layout_height="77dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postName_txt"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/edit_post"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/ic_baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/postText_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/postText_txt"
        app:layout_constraintTop_toBottomOf="@+id/edit_post" />

    <TextView
        android:id="@+id/readed"
        android:layout_width="110dp"
        android:layout_height="18dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postText_txt"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/answered"
        android:layout_width="106dp"
        android:layout_height="19dp"
        android:layout_marginTop="0dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/readed"
        app:layout_constraintTop_toBottomOf="@+id/postText_txt"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>